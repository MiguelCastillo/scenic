{
  "name": "scenic",
  "version": "0.0.0",
  "description": "Scene graph rendering",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "serve": "npm run scene & npm run editor & npm run fileformats & 3dub",
    "start": "3dub --config .3dub-prod.js",
    "start-dev": "pm2 start dev.config.js",
    "stop-dev": "pm2 delete server build-scene build-editor build-fileformats",
    "monit": "pm2 monit",
    "logs": "pm2 logs",
    "editor": "pakit --config editor/.pakit-editor.js",
    "scene": "pakit --config editor/.pakit-scene.js",
    "fileformats": "pakit --config editor/.pakit-fileformats.js",
    "build": "npm run scene -- --watch false & npm run editor -- --watch false & npm run fileformats -- --watch false",
    "prepare": "husky install"
  },
  "author": "Miguel Castillo",
  "license": "MIT",
  "engines": {
    "node": ">=14.x <=17.x"
  },
  "dependencies": {
    "3dub": "^1.1.0",
    "encoding": "^0.1.13",
    "iconoir-react": "^4.9.1",
    "node-fetch": "^3.2.3",
    "pako": "^2.0.4",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@bit/loader-text": "^1.2.1",
    "eslint": "^8.14.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.0",
    "pakit": "^2.2.0",
    "pm2": "^5.2.0",
    "prettier": "2.6.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "webgl-mock": "^0.1.7"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
