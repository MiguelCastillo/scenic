{
  "name": "scenic",
  "version": "0.0.0",
  "description": "Scene graph rendering",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint --config .eslintrc.js --ext .js --ext .jsx editor packages",
    "start": "3dub --config .3dub-prod.js",
    "start-dev": "pm2 start dev.config.js",
    "stop-dev": "pm2 delete server build-scene build-editor build-fileformats",
    "monit": "pm2 monit",
    "logs": "pm2 logs",
    "editor": "pakit --config editor/.pakit-editor.js",
    "scene": "pakit --config editor/.pakit-scene.js",
    "fileformats": "pakit --config editor/.pakit-fileformats.js",
    "build": "npm run scene -- --minify & npm run editor -- --minify & npm run fileformats -- --minify",
    "prepare": "husky install"
  },
  "author": "Miguel Castillo",
  "license": "MIT",
  "engines": {
    "node": ">=14.x <=17.x"
  },
  "dependencies": {
    "3dub": "^1.1.0",
    "encoding": "^0.1.13",
    "iconoir-react": "^5.0.0",
    "node-fetch": "^3.2.6",
    "pako": "^2.0.4",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.2",
    "@babel/plugin-proposal-class-properties": "^7.17.12",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "@bit/loader-text": "^1.2.1",
    "@scenic/math": "*",
    "@scenic/dom": "*",
    "@scenic/renderer": "*",
    "@scenic/animation": "*",
    "eslint": "^8.17.0",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.1",
    "pakit": "^2.3.0",
    "pm2": "^5.2.0",
    "prettier": "2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webgl-mock": "^0.1.7"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "workspaces": [
    "packages/*"
  ]
}
